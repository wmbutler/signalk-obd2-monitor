  "engineInstance": {
    "ui:help": "Which engine is this monitoring?"
  },
  "monitoring": {
    "fuelFlowRate": {
      "ui:help": "Monitor real-time fuel consumption (requires PID 5E support)"
    },
    "fuelPressure": {
      "ui:help": "Monitor fuel rail pressure (requires PID 22/23 support)"
    },
    "calculateFuelConsumption": {
      "ui:help": "Track total fuel used and average consumption rate"
    },
    "calculateFuelEfficiency": {
      "ui:help": "Calculate fuel efficiency metrics (requires speed data)"
    }
  },
  "alarms": {
    "ui:order": ["coolantTemperature", "fuelPressure", "oilTemperature"],
    "coolantTemperature": {
      "ui:collapsible": true,
      "enabled": {
        "ui:help": "Enable temperature monitoring and alarms"
      },
      "warning": {
        "ui:widget": "range",
        "ui:help": "Temperature at which to issue a warning"
      },
      "alarm": {
        "ui:widget": "range",
        "ui:help": "Temperature at which to issue an alarm"
      },
      "emergency": {
        "ui:widget": "range",
        "ui:help": "Critical temperature requiring immediate action"
      }
    },
    "fuelPressure": {
      "ui:collapsible": true,
      "enabled": {
        "ui:help": "Enable fuel pressure monitoring and alarms"
      },
      "lowWarning": {
        "ui:widget": "range",
        "ui:help": "Pressure below which to issue a low pressure warning"
      },
      "lowAlarm": {
        "ui:widget": "range",
        "ui:help": "Critical low pressure alarm threshold"
      },
      "highWarning": {
        "ui:widget": "range",
        "ui:help": "Pressure above which to issue a high pressure warning"
      },
      "highAlarm": {
        "ui:widget": "range",
        "ui:help": "Critical high pressure alarm threshold"
      }
    },
    "oilTemperature": {
      "ui:collapsible": true,
      "enabled": {
        "ui:help": "Enable oil temperature monitoring and alarms"
      },
      "warning": {
        "ui:widget": "range",
        "ui:help": "Temperature at which to issue a warning"
      },
      "alarm": {
        "ui:widget": "range",
        "ui:help": "Critical temperature alarm threshold"
      }
    }
  },
  "logging": {
    "ui:collapsible": true,
    "ui:order": ["enabled", "logLevel", "logDir", "logFile", "maxFileSize", "includeRawData"],
    "enabled": {
      "ui:help": "Enable logging of all OBD2 queries and responses, including RPM queries"
    },
    "logLevel": {
      "ui:widget": "select",
      "ui:help": "Set the minimum severity level for log entries. Debug level includes all OBD2 commands"
    },
    "logDir": {
      "ui:help": "Directory where log files will be stored (relative to SignalK data directory)"
    },
    "logFile": {
      "ui:help": "Name of the log file. Rotated files will have timestamps appended"
    },
    "maxFileSize": {
      "ui:widget": "range",
      "ui:help": "Maximum size in MB before the log file is rotated"
    },
    "includeRawData": {
      "ui:help": "Include raw OBD2 hex responses in logs. Useful for debugging but increases log size"
    }
  }
}
